---
import { getPortafolioTextContent } from '../utils/i18n';
import { Image } from 'astro:assets';
import heroPortrait from '../assets/hero-portrait.jpg';
import frame from '../assets/frame.png';

export interface Props {
	lang?: 'es' | 'en';
}

const { lang = 'es' } = Astro.props;
const text = getPortafolioTextContent(lang).hero;
---

<section class="hero" id="inicio">
	<div class="hero-content">
		<div class="stage-select">
			<Image class="portrait" src={heroPortrait} alt="Portrait placeholder" />
			<Image class="frame" src={frame} alt="Decorative frame" />
		</div>
		<h1>{text.name}</h1>
		<p class="subtitle">{text.title}</p>
		<p class="description">
			{text.description}
		</p>
		<div class="hero-actions">
			<a href="#proyectos" class="mega-button primary">{text.viewProjectsBtn}</a>
			<a href="#contacto" class="mega-button secondary">{text.contactBtn}</a>
		</div>
	</div>
</section>



